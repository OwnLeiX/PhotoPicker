<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="lx.photopicker">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true">
        <activity android:name=".ui.activity.FolderListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Full"/>
        <activity android:name=".ui.activity.FolderDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Full"/>
        <activity android:name=".ui.activity.PhotoClipActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Full"/>
        <activity android:name=".ui.activity.PhotosViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Full"/>
    </application>

</manifest>
