<?xml version="1.0" encoding="utf-8"?>
<lx.photopicker.ui.widget.SquareFrameLayoutW xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/folderDetail_item_iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <CheckBox
                android:id="@+id/folderDetail_item_cb_isPicked"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|right"
                android:button="@null"
                android:background="@drawable/selector_checkbox"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>


</lx.photopicker.ui.widget.SquareFrameLayoutW>